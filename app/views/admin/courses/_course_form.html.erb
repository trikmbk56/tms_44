<div class="col-md-8 col-md-offset-2">
  <%= form_for [:admin, @course] do |f| %>
    <%= render "shared/error_messages", object: @course %>
      <div class="panel panel-info">
        <div class="panel panel-heading">
          <h3 class="panel-title"><%= t "admin.course.course" %></h3>
        </div>
        <div class="panel-body">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
    <%= render "subject_fields", f: f %>
    <%= f.submit t("form.submit"),
      class: "btn btn-primary btn-lg col-md-2 col-md-offset-5" %>
  <% end %>
</div>
