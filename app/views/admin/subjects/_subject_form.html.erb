<%= form_for [:admin, @subject] do |f| %>
  <%= render "shared/error_messages", object: @subject %>
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel panel-heading">
        <h3 class="panel-title"><%= t "admin.subject.subject" %></h3>
      </div>
      <div class="panel-body">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
        <%= link_to_add_fields t("admin.subject.add_task_field"), f, :tasks %>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <%= f.label :tasks, t("admin.subject.tasks") %>
    <hr>
  </div>
  <div class="form-group">
    <%= render "task_label" %>
    <%= f.fields_for :tasks do |task| %>
      <%= render "task_fields", f: task %>
    <% end %>
  </div>
  <%= f.submit t("form.submit"),
    class: "btn btn-primary btn-lg col-md-2 col-md-offset-5" %>
<% end %>
