<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th><%= t "name" %></th>
          <th><%= t "email" %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <%= f.fields_for :user_courses, @course.user_courses.build do |builder| %>
            <tr> 
              <td><%= builder.check_box :_destroy,
                {checked: @course.load_users.include?(user)}, 0, 1 %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
            </tr>
            <% if @course.get_user_course user %>
              <%= builder.hidden_field :id, value: @course.get_user_course(user).id %>
            <% end %>
            <%= builder.hidden_field :user_id, value: user.id %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
